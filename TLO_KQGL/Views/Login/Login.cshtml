@using TLO_KQGL.Models;
    <!DOCTYPE HTML>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title></title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script type="text/javascript">
            //调用js登陆方法验证用户名和密码,如果通过跳转页面
            function login() {
                //获取用户名和密码
                var userno = $("#UserNo").val();
                var password = $("#UserPswd").val();
                var doRemember = $('#DoRemember').is(':checked');
                //验证用户名不为空
                if (!userno.length > 0) {
                    alert("请输入用户名！");
                    return;
                }
                //验证密码不为空
                if (!password.length > 0) {
                    alert("请输入密码！");
                    return;
                }
                $.ajax({
                    url: "/Login/confirmation",
                    data: { userno: userno, password: password, doRemember: doRemember },
                    type: "Get",
                    success: function (data) {
                        if (data == "ok") {
                            window.location.href = "/Home/Index";
                        }
                        else {
                            alert("用户名或密码不正确，请您重新输入！");
                        }
                    },
                });

            }
        </script>
    </head>
    <body style="background: url(Images/login_bg.png) no-repeat; width: 100%; height: 100%; background-size:100%; position: absolute; ">
        <div class="container" style="width: 520px; height: 100px; margin: 0 auto; margin-top: 200px;">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="LabelUserNo" class="col-sm-2 control-label">用户名:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="UserNo" style="width:230px;" placeholder="请输入用户名" value="@Model.userNo" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="LabelUserPswd" class="col-sm-2 control-label">密码:</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="UserPswd" style="width:230px;" placeholder="请输入密码" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input id="DoRemember" type="checkbox">记住用户名
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="width: 440px; text-align: center; margin-top: 15px">
                    <button type="submit" class="btn btn-default" onclick="login()" style="background-color: goldenrod; width:120px;">登录</button>
                </div>
                @*<div class="form-group">
                    <button type="submit" class="btn btn-default" onclick="login()" style="padding:0;"><img src="/Images/login_btn.png" height="36" width="200"></button>
                </div>*@
                @*<br />
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-default" onclick="login()">登录</button>*@
            </form>
        </div>
</body>
</html>
